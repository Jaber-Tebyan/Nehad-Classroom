<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherSendTaskFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sub_task_recycler_view"
        tools:listitem="@layout/task_recycler_view_item"
        tools:itemCount="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_sub_categories_button"
            android:layout_width="match_parent"
            app:backgroundTint="@color/vibrant_blue"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_sub_categories"

            />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>



