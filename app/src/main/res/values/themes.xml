<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.NehadClassroom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vibrant_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Theme.NehadClassroom.MyTextInputLayout</item>
        <item name="android:textColor">@color/less_white</item>
        <item name="android:windowBackground">#212121</item>


        <item name="editTextStyle">@style/Theme.NehadClassroom.MyEditTextStyle</item>
        <item name="radioButtonStyle">@style/Theme.NehadClassroom.RadioButton</item>
        <item name="checkboxStyle">@style/Theme.NehadClassroom.CheckBox</item>
    </style>




    <style name="roundedImageCorner">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomLeft">15%</item>
        <item name="cornerSizeBottomRight">15%</item>
    </style>

    <style name="Theme.NehadClassroom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NehadClassroom.MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/less_white</item>
        <item name="boxStrokeColor">@color/less_white</item>
        <item name="startIconTint">@color/less_white</item>
        <item name="endIconTint">@color/less_white</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Theme.NehadClassroom.MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="Theme.NehadClassroom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NehadClassroom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.NehadClassroom.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/less_white</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="Theme.NehadClassroom.CheckBox" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/less_white</item>
    </style>






</resources>